<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/holo_orange_light"
    android:weightSum="1">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="44dp"

        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/rounded_edittext"
        android:drawableRight="@drawable/ic_action_name"
        android:textSize="23sp"
        android:hint="   Search places or web"
        android:drawableLeft="@color/colorPrimaryDark"
        android:imeOptions="actionSearch"
        android:inputType="text" />

    <ImageButton
        android:id="@+id/alexaButton"
        android:layout_width="35dp"
        android:layout_height="44dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/rounded_speechimage"

        android:layout_marginRight="7dp"
        android:src="@drawable/ic_alexa3"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/temp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="45dp"
            android:layout_weight="1"
            android:text="29\u2103"
            android:textColor="@color/white"
            android:textSize="40sp" />




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_weather"
                android:layout_width="191dp"
                android:layout_height="160dp"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:src="@drawable/ic_cloudy" />

            <TextView
                android:id="@+id/weather_description"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_weather"
                android:layout_centerHorizontal="true"
                android:fontFamily="cursive"
                android:text="Clear"
                android:textColor="@color/white"
                android:textSize="37sp" />

        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:text="Day 27°⬆ • Night 12°⬇"
        android:textSize="30dp"
        android:fontFamily="cursive"/>


</LinearLayout>